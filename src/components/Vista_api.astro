---
interface responseData {
  name: string;
  email: string;
  id: number;
}

const response = await fetch('https://jsonplaceholder.typicode.com/users');
const data = await response.json();
let muestraUsuario = 0;

function siguienteUsuario() {
  muestraUsuario = (muestraUsuario + 1) % data.length;
  render();
}

function anteriorUsuario() {
  muestraUsuario = (muestraUsuario - 1 + data.length) % data.length;
  render();
}

function render() {
  // Implementa la funci√≥n render si es necesario
}
---

<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Astro</title>
</head>
<body>
  <h1>Selecciona un usuario</h1>
  <ul>
    <li>Nombre de usuario: {data[muestraUsuario].name}</li>
    <li>Email: {data[muestraUsuario].email}</li>
    <li>Id: {data[muestraUsuario].id}</li>
  </ul>

  <button onclick="{anteriorUsuario}"> Anterior </button>
  <button onclick="{siguienteUsuario}">Siguiente </button>
</body>
</html>
